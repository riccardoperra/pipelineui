{
  "include": [
    "src",
    "scripts",
    "test",
    "workflow-parser/node.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}